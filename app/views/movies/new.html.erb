<h1>Add New Movie</h1>

<%= simple_form_for @movie do |f| %>
  <div class="form-inline">
    <div class="col-6">
      <div class="form-row" id="movie_title">
        <%= f.input :name, label: false, placeholder: 'Enter movie name', input_html: { class: 'flex-fill' }, wrapper_html: { class: 'flex-fill' } %>
        <%= f.button :button, icon('fas', 'search'), class: 'btn btn-primary', id: 'movie_button' %>
      </div>
    </div>
    <div class="col-6">
    <%= f.button :submit, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="d-none">
    <%= f.input :description %>
    <%= f.input :year %>
    <%= f.input :imdb %>
    <%= f.input :director %>
    <%= f.input :writer %>
    <%= f.input :production %>
    <%= f.input :awards %>
    <%= f.input :actors %>
    <%= f.input :imdbrating %>
    <%= f.input :metascore %>
    <%= f.input :runtime %>
    <%= f.input :rated %>
    <%= f.input :language %>
    <%= f.input :country, as: :text %>
    <%= f.input :poster %>
  </div>
<% end %>
