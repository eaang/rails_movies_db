<h1>New Movie</h1>

<%= simple_form_for @movie do |f| %>
  <%= f.input :name %>
  <div class=d-flex>
    <%= f.button :button, 'Check Title', class: 'btn btn-primary', id: 'movie_button' %>
    <div id="movie_result"></div>
  </div>
  <%= f.input :description %>
  <%= f.input :year %>
  <%= f.input :imdb %>
  <%= f.input :director %>
  <%= f.input :writer %>
  <%= f.input :production %>
  <%= f.input :awards %>
  <%= f.input :actors %>
  <%= f.input :imdbrating %>
  <%= f.input :metascore %>
  <%= f.input :runtime %>
  <%= f.input :rated %>
  <%= f.input :language %>
  <%= f.input :country, as: :text %>
  <%= f.input :poster %>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
     