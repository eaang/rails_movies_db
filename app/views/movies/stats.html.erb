<h1 class="m-0">
  Movie Statistics
</h1>

<div class="my-3">
<h3>Total movies: <%= @movies.count %></h3>
</div>

<div class="my-3">
<h3>Genres of Movies</h3>
<%= pie_chart @genres_and_movies.group('genres.name').count, legend: 'right' %>
</div>

<div class="my-3">
<h3>Our Reviews</h3>
<%= column_chart [
  {name: "Evan", data: @evan_reviews.group(:score).count },
  {name: "Case", data: @case_reviews.group(:score).count }
], legend: 'bottom' %>
</div>

