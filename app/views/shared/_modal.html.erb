<!-- Button trigger modal -->
<div class="d-flex">
<button class="btn btn-block btn-link text-left p-0" data-toggle="modal" data-target="#<%= movie.imdb %>">
  <%= movie.name %>
</button>

<!-- Modal -->
<div class="modal fade" id="<%= movie.imdb %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body p-0">
        <div class="container-fluid">
          <div class="row">
            <div class="col-4 p-0">
              <%= image_tag movie.poster, class: 'img-fluid mx-auto float-md-left' %>
            </div>
            <div class="col-8 d-flex flex-column justify-content-between">
              <div class="row p-3">
                <div class="w-100">
                  <div class="d-flex justify-content-between align-items-start modal-title">
                    <h5><%= movie.name %> (<%= movie.year %>)</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="small">
                    <%= movie.rated %> | 
                    <%= movie.showtime %> | 
                    <%= movie.country %>
                    <div><strong>Director:</strong> <%= movie.director %></div>
                    <div><strong>Starring:</strong> <%= movie.actors %></div>
                  </div>
                </div>
              </div>
              <div class="row p-3">
                <%= link_to 'See More', movie, class: 'btn btn-primary btn-block'%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
